<div class="container mt-5">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div id="first">
                <div class="myform form ">
                    <div class="logo mb-3">
                        <div class="col-md-12 text-center">
                            <h1>Reset Password</h1>
                        </div>
                        {{> messages }}
                    </div>
                    <form action="/user/reset_password" method="post" name="resetPassword">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Password</label>
                            <input type="password" name="password" id="password" class="form-control" aria-describedby="emailHelp"
                                placeholder="Enter Password" {{#if password}} value={{password}} {{else}} value=''
                                {{/if}}>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Confirm password</label>
                            <input type="password" name="password2" id="password2" class="form-control"
                                aria-describedby="emailHelp" placeholder="Enter Password Again" {{#if password2}} value={{password2}}
                                {{else}} value='' {{/if}}>
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="token" id="token" class="form-control" value={{token}}>
                        </div>
                        <div class="form-group">
                            <p class="text-center">Choose your new password</p>
                        </div>
                        <div class="col-md-12 text-center ">
                            <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Update password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>