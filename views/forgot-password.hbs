<div class="container mt-5">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div id="first">
                <div class="myform form ">
                    <div class="logo mb-3">
                        <div class="col-md-12 text-center">
                            <h1>Forgot Password</h1>
                        </div>
                        {{> messages }}
                    </div>
                    <form action="" method="post" name="login">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp"
                                placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <p class="text-center">You will receive an email shortly</p>
                        </div>
                        <div class="col-md-12 text-center ">
                            <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Request email</button>
                        </div>
                        <div class="form-group mt-3">
                            <p class="text-center">Don't have account? <a href="/user/register" id="signup">Sign up
                                    here</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>