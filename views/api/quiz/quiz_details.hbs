<div>
    {{>nav }}
</div>
<div class="container">
    {{#if quiz}}
    {{>messages }}
    <h1 class="text-center mb-5">{{quiz.quizName}}</h1>
    <h4 class="text-center mb-5">{{quiz.quizType}}</h1>
        {{/if}}
</div>
<table class="table table-hover mt-5">
    {{#if quiz}}
    <thead>
        <tr>
            <th scope="col">Question body</th>
            <th scope="col">Question type</th>
            <th scope="col">Answers</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    {{#each quiz.questions}}
    <tbody>
        <tr>
            <td>{{this.questionBody}}</td>
            <td>{{this.questionCategory}}</td>
            <td>
                {{this.answers.0.answerText}},
                {{this.answers.1.answerText}},
                {{this.answers.2.answerText}},
                {{this.answers.3.answerText}}
            </td>
            <td>
                <a href="/quiz/removequestion/{{../quiz._id}}/{{this._id}}/details" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    </tbody>
    {{/each}}
    {{/if}}
</table>
</div>