<div>
    {{>nav }}
</div>
<div class="container">
    {{>messages }}
</div>
<table class="table table-hover mt-5">
    <thead>
        <tr>
            <th scope="col">Question body</th>
            <th scope="col">Question type</th>
            <th scope="col">Answers</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        {{#if poolQuestions}}
        {{#each poolQuestions}}
        <tr>
            <td>{{this.questionBody}}</td>
            <td>{{this.questionCategory}}</td>
            <td>{{this.answers.[0].answerText}},
                {{this.answers.[1].answerText}},
                {{this.answers.[2].answerText}},
                {{this.answers.[3].answerText}}
            </td>
            <td>
                {{#if true}}
                {{#if this.isInQuiz}}
                <a href="/quiz/removequestion/{{../quizId}}/{{this._id}}/{{../currentPage}}"
                    class="btn btn-danger">Remove from quiz</a>
                {{else}}
                <a href="/quiz/addquestion/{{../quizId}}/{{this._id}}/{{../currentPage}}" class="btn btn-success">Add
                    to quiz</a>
                {{/if}}
                {{else}}No options available{{/if}}
            </td>
        </tr>
        {{/each}}
        {{/if}}
    </tbody>
</table>
<div class="container text-center">
    {{#if pages}}
    {{#each pages}}
    <a href="/quiz/questions/{{../quizId}}/{{this}}" class="btn btn-success">{{this}}</a>
    {{/each}}
    {{/if}}
</div>