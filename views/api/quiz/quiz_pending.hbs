<div>
    {{>nav }}
</div>
<div class="container">
    {{>messages }}
</div>
<table class="table table-hover mt-5">
    <thead>
        <tr>
            <th scope="col">Quiz name</th>
            <th scope="col">Quiz type</th>
            <th scope="col">Question count</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        {{#if viewObject.newestQuizzes}}
        {{#each viewObject.newestQuizzes}}
        <tr>
            <td>{{this.quizName}}</td>
            <td>{{this.quizType}}</td>
            <td>{{this.questionCount}}</td>
            <td>
                {{#if ../user.isAdmin}}
                <a href="/quiz/delete/{{this._id}}/{{../viewObject.currentPage}}/pending"
                    class="btn btn-danger">Delete</a>
                <a href="/quiz/edit/{{this._id}}/{{../viewObject.currentPage}}/pending" class="btn btn-warning">Edit</a>
                <a href="/quiz/approve/{{this._id}}/{{../viewObject.currentPage}}/pending"
                    class="btn btn-success">Approve</a>
                <a href="/quiz/details/{{this._id}}" class="btn btn-info">Details</a>
                {{else}}No options available{{/if}}
            </td>
        </tr>
        {{/each}}
        {{/if}}
    </tbody>
</table>
<div class="container text-center">
    {{#if viewObject.pageArray}}
    {{#each viewObject.pageArray}}
    <a href="/quiz/pending/{{this}}" class="btn btn-success">{{this}}</a>
    {{/each}}
    {{/if}}
</div>