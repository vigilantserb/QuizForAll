<div>
    {{>nav }}
</div>
<div class="container">
    {{>messages }}
</div>
<table class="table table-hover mt-5">
    <thead>
        <tr>
            <th scope="col">Question body</th>
            <th scope="col">Question type</th>
            <th scope="col">Answers</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        {{#if newestQuestions}}
        {{#each newestQuestions}}
        <tr>
            <td>{{this.questionBody}}</td>
            <td>{{this.questionCategory}}</td>
            <td>{{this.answers.[0].answerText}},
                {{this.answers.[1].answerText}},
                {{this.answers.[2].answerText}},
                {{this.answers.[3].answerText}}
            </td>
            <td>
                {{#if ../user.isAdmin}}
                <a href="/question/delete/{{this._id}}/{{../page}}/pending" class="btn btn-danger">Delete</a>
                <a href="/question/edit/{{this._id}}/{{../page}}/pending" class="btn btn-warning">Edit</a>
                <a href="/question/approve/{{this._id}}/{{../page}}/pending" class="btn btn-success">Approve</a>
                {{else}}No options available{{/if}}
            </td>
        </tr>
        {{/each}}
        {{/if}}
    </tbody>
</table>
<div class="container text-center">
    {{#if pages}}
    {{#each pages}}
    <a href="/question/pending/{{this}}" class="btn btn-success">{{this}}</a>
    {{/each}}
    {{/if}}
</div>