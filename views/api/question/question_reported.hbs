<div>
    {{>nav }}
</div>
<div class="container">
    {{>messages }}
</div>

<table class="table table-hover mt-5">
    <thead>
        <tr>
            <th scope="col">Question body</th>
            <th scope="col">Question type</th>
            <th scope="col">Answers</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        {{#if reportedQuestions}}
        {{#each reportedQuestions}}
        <tr>
            <td>{{this.questionBody}}</td>
            <td>{{this.questionCategory}}</td>
            <td>{{this.answers.[0].answerText}},
                {{this.answers.[1].answerText}},
                {{this.answers.[2].answerText}},
                {{this.answers.[3].answerText}}
            </td>
            <td>
                <a href="/api/question/delete/{{this._id}}/{{../page}}/reported" class="btn btn-danger">Delete</a>
                <a href="/api/question/edit/{{this._id}}/{{../page}}/reported" class="btn btn-warning">Edit</a>
                <a href="/api/question/review/{{this._id}}/{{../page}}/reported" class="btn btn-success">Reviewed</a>
            </td>
        </tr>
        {{/each}}
        {{/if}}
    </tbody>
</table>
<div class="container text-center">
    {{#if pages}}
    {{#each pages}}
    <a href="/api/question/reported/{{this}}" class="btn btn-success">{{this}}</a>
    {{/each}}
    {{/if}}
</div>